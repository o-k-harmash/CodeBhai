<div class="article">
  <div class="article__content">
    <header class="article__info">
      <img
        class="img img--22"
        src="/static/assets/images/{{data.curriculum.imgFile}}"
        alt=""
      />
      <div class="sticky">
        <h2>{{data.currentArticle.title}}</h2>
        <p>{{data.curriculum.title}}</p>
      </div>
    </header>

    <article class="markdown">
      {{{data.rawHtml}}}
    </article>

    <nav class="article__nav">
      <a
        class="button button--transpirent"
        href="/curriculums/{{data.curriculum.id}}/units"
      >View module</a>
      <button class="button button--green">Mark as completed</button>
      <a
        class="button button--transpirent"
        href="/curriculums/{{data.curriculum.id}}/units/{{data.nextArticleId}}"
      >Next article</a>
    </nav>
  </div>

  <aside class="aside">
    <h4 class="aside__title">Lesson contents</h4>
    <ul>
      {{#each data.h3Ids}}
        <li class="aside__item">
          <a class="aside__link" href="#{{id}}">{{text}}</a>
        </li>
      {{/each}}
    </ul>
  </aside>
</div>