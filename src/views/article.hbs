<div class="article">
  <div class="article__content">
    <header class="article__info">
      <img class="img img--22" src="/static/assets/images/{{imgFile}}" alt="" />
      <div class="sticky">
        <h2>{{title}}</h2>
        <p>{{subTitle}}</p>
      </div>
    </header>

    <article class="markdown">
      {{{content}}}
    </article>

    <div class="article__contributing">
      <a href="{{editLink}}">improve on GitHub</a>
      <a href="{{issueLink}}">report an issue</a>
      <a href="{{changeLogLink}}">see lesson changelog</a>
    </div>

    <nav class="article__nav">
      <a
        class="button button--transpirent"
        href="/curriculums/{{curriculumId}}/units"
      >View curriculum</a>
      <button class="button button--green">Mark as completed</button>
      <a
        class="button button--transpirent"
        href="/curriculums/{{curriculumId}}/units/{{nextArticleId}}"
      >Next article</a>
    </nav>
  </div>

  <aside class="aside">
    <h4 class="aside__title">Article contents</h4>
    <ul id="h3ids">
      {{#each sideNav}}
        <li class="aside__item">
          <a class="aside__link" href="#{{id}}">{{text}}</a>
        </li>
      {{/each}}
    </ul>
  </aside>
</div>